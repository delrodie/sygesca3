{% extends 'backend_layout.html.twig' %}

{% block title %}{{parent()}} Liste des paiements{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Liste des paiements</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mt-2 mb-5">
                            <div class="col-md-4 text-right">
                                <h6>Filtrez la liste en sélectionnant la région</h6>
                            </div>
                            <div class="col-md-4 text-center">
                                <form action="{{ path('backend_user_paiement_unknow') }}" onchange="this.submit()">
                                    <select name="request_region" id="" class="form-control select">
                                        <option value="">-- Selection la région --</option>
                                        <option value=""></option>
                                        {% for region in regions %}
                                            <option value="{{ region.id }}">{{ region.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </form>
                            </div>
                        </div>


                        <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>ID_TRANSACTION</th>
                                <th>STATUT</th>
                                <th>CARTE</th>
                                <th>NOM & PRENOMS</th>
                                <th>DATE NAISSANCE</th>
                                <th>LIEU NAISSANCE</th>
                                <th>SEXE</th>
                                <th>CONTACT</th>
                                <th>FONCTION</th>
                                <th>REGION</th>
                                <th>DISTRICT</th>
                                <th>GROUPE</th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for liste in listes %}
                                <tr style="color: #fff">
                                    <td>{{ loop.index }}</td>
                                    <td class="text-center">{{ liste.id_transaction }}</td>
                                    <td class="text-center">{{ liste.status_paiement }}</td>
                                    <td class="text-center">{{ liste.statut? 'OUI' : '-'}}</td>
                                    <td>{{ liste.nom|upper }} {{ liste.prenoms|title }}</td>
                                    <td class="text-center">{{ liste.date_naissance }}</td>
                                    <td>{{ liste.lieu_naissance }}</td>
                                    <td>{{ liste.sexe }}</td>
                                    <td>{{ liste.contact }}</td>
                                    <td>{{ liste.fonction }}</td>
                                    <td>{{ liste.region }}</td>
                                    <td>{{ liste.district }}</td>
                                    <td>{{ liste.groupe }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/dataTables.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/buttons.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/responsive.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ asset('assets/backoffice/plugins/select2/select2.min.css') }}">
{% endblock %}
