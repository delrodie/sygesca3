            </thead>
            <tfoot>
            <tr>
                <th>Region</th>
                <th>District</th>
                <th>Groupe</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>dateNaissance</th>
                <th>Fonction</th>
