{% block body %}
    <div class="wrapper">
        <div class="text-center" style="text-align:center; margin-bottom: 50px;"><a href="{{ path('backend_dashbord') }}">Retour</a></div>
        <table id="example" class="display" style="width:100%">
            <thead>
            <tr>
                <th>Region</th>
                <th>District</th>
                <th>Groupe</th>
                <th>Nom</th>
