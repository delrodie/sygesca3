{% extends 'backend_layout.html.twig' %}

{% block title %}{{parent()}} Liste des adherants {{ annee }} - {{ district.nom }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Liste des adherants {{ annee }}</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mt-2 mb-5">
                            <div class="col-md-4 text-left">
                                <h6>Filtrez la liste en s√©lectionnant le district ou le groupe</h6>
                            </div>
                            <div class="col-md-4 text-center">
                                <form action="{{ path('archive_district', {'annee': annee, 'region': region.slug}) }}" onchange="this.submit()">
                                    <select name="archive_district" id="" class="form-control select">
                                        <option value="">-- Selection le district --</option>
                                        <option value=""></option>
                                        {% for district in districts %}
                                            <option value="{{ district.id }}">{{ district.nom }}</option>
                                        {% endfor %}
                                    </select>
                                </form>
                            </div>
                            <div class="col-md-4 text-center">
                                <form action="{{ path('archive_groupe', {'annee': annee, 'region': region.slug, 'district': district.slug}) }}" onchange="this.submit()">
                                    <select name="archive_groupe" id="" class="form-control select">
                                        <option value="">-- Selection le groupe --</option>
                                        <option value=""></option>
                                        {% for groupe in groupes %}
                                            <option value="{{ groupe.id }}">{{ groupe.paroisse }}</option>
                                        {% endfor %}
                                    </select>
                                </form>
                            </div>
                        </div>

                        <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>DISTRICT</th>
                                <th>GROUPE</th>
                                <th>STATUT</th>
                                <th>SCOUT</th>
                                <th>FONCTION</th>
                                <th>CARTE</th>
                                <th>MATRICULE</th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for liste in listes %}
                                <tr style="color: #fff">
                                    <td>{{ loop.index }}</td>
                                    <td>{{ liste.district }}</td>
                                    <td>{{ liste.groupe }}</td>
                                    <td class="text-center">{{ liste.statut }}</td>
                                    <td>{{ liste.scoutNom|upper }} {{ liste.scoutPrenoms|title }}</td>
                                    <td>{{ liste.fonction }}</td>
                                    <td class="text-center">{{ liste.carte }}</td>
                                    <td class="text-center">{{ liste.matricule }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/dataTables.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/buttons.bootstrap4.min.css')) }}">
