{% extends 'backend_layout.html.twig' %}

{% block title %}{{parent()}} Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Liste des adherants {{ annee }}</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">


                        <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>REGION</th>
                                <th>STATUT</th>
                                <th>SCOUT</th>
                                <th>FONCTION</th>
                                <th>CARTE</th>
                                <th>MONTANT</th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for cotisation in cotisations|slice(0,50) %}
                                <tr style="color: #fff">
                                    <td>{{ loop.index }}</td>
                                    <td>{{ cotisation.scout.groupe.district.region.nom }}</td>
                                    <td class="text-center">{{ cotisation.scout.statut.libelle }}</td>
                                    <td>{{ cotisation.scout.nom|upper }} {{ cotisation.scout.prenoms|title }}</td>
                                    <td>{{ cotisation.fonction }}</td>
                                    <td class="text-center">{{ cotisation.carte }}</td>
                                    <td class="text-right">{{ cotisation.montantSanFrais|number_format(0,'','.') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div>
    </div>
{% endblock %}
