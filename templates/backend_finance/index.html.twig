{% extends 'backend_layout.html.twig' %}

{% block title %}{{parent()}} Fiances liste des adherants {{ annee }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Liste des adherants {{ annee }}</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">


                        <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>REGIONS</th>
                                <th>DISTRICTS</th>
                                <th>GROUPES</th>
                                <th>SCOUTS</th>
                                <th>DATES NAISSANCE</th>
                                <th>FONCTION</th>
                                <th>CARTE</th>
                                <th>MATRICULE</th>
                                <th>MONTANT</th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for liste in listes %}
                                <tr style="color: #fff">
                                    <td>{{ loop.index }}</td>
                                    <td>{{ liste.region }}</td>
                                    <td>{{ liste.district }}</td>
                                    <td>{{ liste.groupe }}</td>
                                    <td>{{ liste.nom|upper }} {{ liste.prenom|title }}</td>
                                    <td>{{ liste.dateNaissance|date('d/m/Y') }}</td>
                                    <td>{{ liste.fonction }}</td>
                                    <td class="text-center">{{ liste.carte }}</td>
                                    <td class="text-center">{{ liste.matricule }}</td>
                                    <td class="text-right">{{ liste.montant|number_format(0,'','') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/dataTables.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/buttons.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/responsive.bootstrap4.min.css')) }}">
{% endblock %}
