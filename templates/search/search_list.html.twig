{% extends 'backend_layout.html.twig' %}

{% block title %}{{parent()}} Liste des scouts{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <h4 class="page-title">Liste des scouts</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">

                        <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>REGION</th>
                                <th>STATUT</th>
                                <th>SCOUT</th>
                                <th>FONCTION</th>
                                <th>CARTE</th>
                                <th>MATRICULE</th>
                                <th>DISTRICT</th>
                                <th>PAROISSE</th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for liste in listes %}
                                <tr style="color: #fff">
                                    <td>{{ loop.index }}</td>
                                    <td>{{ liste.region }}</td>
                                    <td class="text-center">{{ liste.statut }}</td>
                                    <td class="lien">
                                        <a href="{{ path('admin_search_show', {'slug': liste.slug}) }}">
                                            {{ liste.nom|upper }} {{ liste.prenoms|title }}
                                        </a>
                                    </td>
                                    <td>{{ liste.fonction }}</td>
                                    <td class="text-center">{{ liste.carte }}</td>
                                    <td class="text-center">{{ liste.matricule }}</td>
                                    <td class="text-left">{{ liste.district }}</td>
                                    <td class="text-left">{{ liste.groupe }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div> <!-- end col -->
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/dataTables.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/buttons.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/backoffice/plugins/datatables/responsive.bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ asset('assets/backoffice/plugins/select2/select2.min.css') }}">
    <style>
        .lien a{color: white}
    </style>
{% endblock %}
